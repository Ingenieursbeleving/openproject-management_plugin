<% html_title l(:label_administration), "Import users" %>
<% local_assigns[:additional_breadcrumb] = "Import Users" %>
<%= breadcrumb_toolbar "Import Users" %>

<div class="notification-box -info -slim">
  <a title="close" class="notification-box--close icon-context icon-close"></a>
  <div class="notification-box--content">
    <span>This function requires specific knowledge about the requested CSV format and import options.</span><br>
    <%= link_to "You can click this link if you need any help, including a template you can adapt.", { action: :csv_import }, target: :_blank %>
  </div>
</div>
<%= form_tag({ action: :csv_import_submit }, multipart: true, method: :post) do %>
  <csv-upload-form></csv-upload-form>
<% end %>
